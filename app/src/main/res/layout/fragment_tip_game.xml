<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/bgbetting"
    android:id="@+id/view_TipGame_fragment">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/logoratiopharm"
        android:id="@+id/iv_Team1"
        android:adjustViewBounds="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/avatarframe"
        android:id="@+id/iv_Team2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sb_SeekBar"
        android:max="100"
        android:progress="0"
        android:layout_toLeftOf="@+id/tv_Prozent2"
        android:layout_alignBottom="@+id/tv_Prozent1"
        android:layout_alignLeft="@+id/btn_Vote"
        android:layout_alignStart="@+id/btn_Vote" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote"
        android:id="@+id/btn_Vote"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/iv_Team1"
        android:layout_alignEnd="@+id/iv_Team1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/btn_Vote"
        android:layout_alignLeft="@+id/iv_Team2"
        android:layout_alignStart="@+id/iv_Team2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5%"
        android:id="@+id/tv_Prozent1"
        android:layout_below="@+id/iv_Team1"
        android:layout_toLeftOf="@+id/sb_SeekBar"
        android:layout_toStartOf="@+id/sb_SeekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="95%"
        android:id="@+id/tv_Prozent2"
        android:layout_below="@+id/iv_Team2"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView"
        android:background="@drawable/versus"
        android:layout_above="@+id/sb_SeekBar"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView2"
        android:layout_above="@+id/btn_Vote"
        android:layout_alignRight="@+id/btn_Vote"
        android:layout_alignEnd="@+id/btn_Vote"
        android:layout_marginBottom="71dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/basket"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:background="@drawable/basket"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignRight="@+id/iv_Team2"
        android:layout_alignEnd="@+id/iv_Team2" />

</RelativeLayout>