<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:background="@drawable/bgbetting"
    android:windowSoftInputMode="stateHidden|adjustResize"
    android:id="@+id/view_TipGame_fragment"
    android:weightSum="16">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:weightSum="3">

        <ulm.hochschule.project_hoops.views.SquareLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/img_Team"
                android:background="@drawable/logoratiopharm"
                android:layout_gravity="center" />
        </ulm.hochschule.project_hoops.views.SquareLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:background="@drawable/versus"
                android:layout_above="@+id/sb_SeekBar"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center" />
        </FrameLayout>

        <ulm.hochschule.project_hoops.views.SquareLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/avatarframe"
                android:id="@+id/iv_Team2"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center" />
        </ulm.hochschule.project_hoops.views.SquareLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="8">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="5"
                android:id="@+id/tv_Prozent_Ulm"
                android:layout_below="@+id/iv_Team1"
                android:layout_toLeftOf="@+id/sb_SeekBar"
                android:layout_toStartOf="@+id/sb_SeekBar"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|right" />
        </FrameLayout>

        <SeekBar
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/sb_SeekBar"
            android:max="100"
            android:progress="0"
            android:layout_toLeftOf="@+id/tv_Prozent_Other"
            android:layout_alignBottom="@+id/tv_Prozent1"
            android:layout_alignLeft="@+id/btn_Vote"
            android:layout_alignStart="@+id/btn_Vote"
            android:layout_weight="6" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="95"
                android:id="@+id/tv_Prozent_Other"
                android:layout_below="@+id/iv_Team2"
                android:layout_alignLeft="@+id/iv_Team2"
                android:layout_weight="1"
                android:layout_gravity="left|center_vertical" />
        </FrameLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="3" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:layout_above="@+id/btn_Vote"
                android:layout_alignRight="@+id/btn_Vote"
                android:layout_alignEnd="@+id/btn_Vote"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/basketv2"
                android:layout_weight="1"
                android:layout_gravity="center" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/btn_Refresh"
                android:layout_gravity="center"
                android:background="@drawable/refreshicon" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView3"
                android:background="@drawable/basketv2"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignRight="@+id/iv_Team2"
                android:layout_alignEnd="@+id/iv_Team2"
                android:layout_alignLeft="@+id/iv_Team2"
                android:layout_alignStart="@+id/iv_Team2"
                android:layout_weight="1" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tv_vote_information"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="14dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Vote"
            android:id="@+id/btn_Vote"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />
    </FrameLayout>

</LinearLayout>