<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:weightSum="1"
    android:background="@drawable/achievement_begrenzung">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3">

        <ulm.hochschule.project_hoops.views.SquareImage
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:id="@+id/img_Item">

        </ulm.hochschule.project_hoops.views.SquareImage>

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tv_ItemDescription"
                android:layout_weight="0.5"
                android:layout_gravity="left|center_vertical"
                android:textColor="#000000"
                android:textSize="17dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Preis:"
                    android:id="@+id/tv_PriceLabel"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:layout_weight="0.4" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/tv_ItemPrice"
                    android:layout_weight="0.4"
                    android:layout_gravity="center_vertical|right"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="5dp" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                    <ulm.hochschule.project_hoops.views.SquareLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/coin"></ulm.hochschule.project_hoops.views.SquareLayout>
                </FrameLayout>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3">

        <ulm.hochschule.project_hoops.views.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Kaufen"
                android:id="@+id/btn_Buy"
                android:layout_gravity="center_vertical" />
        </ulm.hochschule.project_hoops.views.SquareLayout>
    </FrameLayout>
</LinearLayout>